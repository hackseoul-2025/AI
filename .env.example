# 환경 변수 설정 파일
# 실제 사용 시 .env 파일로 복사하고 값을 채워주세요

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True

# OpenAI API Key (필수)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI 모델 설정
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# 문서 관리 설정
DOCUMENTS_DIR=documents
RAG_DOCUMENTS_SUBDIR=rag
PERSONA_SUBDIR=personas
RAG_TOP_K=3

# SLM 설정
SLM_MODEL=gpt-3.5-turbo
SLM_MAX_CONTEXT_LENGTH=5

# 박물관 설정
DEFAULT_MUSEUM=louvre

# 대화 저장 경로
CONVERSATION_STORAGE_DIR=conversations
